<Window x:Class="PacMan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PacMan"
        mc:Ignorable="d"
        Title="PacMan (@mcmubby)" Height="900" Width="900">
    <Canvas x:Name="Level1Canvas" Background="Black" KeyDown="CanvasKeyDown" Focusable="True">
        <Label FontSize="20" Name="gameScore" Foreground="Wheat" Content="Score : 0"/>

        <Rectangle Width="30" Height="30" Fill="Red" Name="redGhost" Canvas.Left="55" Canvas.Top="48"/>
        <Rectangle Width="30" Height="30" Fill="Pink" Name="pinkGhost" Canvas.Left="55" Canvas.Top="198"/>
        <Rectangle Width="30" Height="30" Fill="Orange" Name="orangGhost" Canvas.Left="55" Canvas.Top="118"/>
        <Rectangle Width="30" Height="30" Fill="Yellow" Name="pacman" Canvas.Left="55" Canvas.Top="248"/>
        
        
        
    </Canvas>
</Window>
