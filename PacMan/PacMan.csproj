<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>pacm.ico</ApplicationIcon>
    <Authors>Mubarak</Authors>
    <PackageId>PacGhost</PackageId>
    <Company>Zenxu</Company>
    <Product>PacGhost</Product>
    <Description>A replica of PacMan. This is a project used to play around with WPF.</Description>
    <RepositoryUrl>https://github.com/mcmubby/PacMan</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <Page Update="MainWindow.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <ItemGroup> 
  <Content Include="assets\**"> 
    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory> 
  </Content> 
 </ItemGroup>

</Project>
